{
  "manifest_version": 2,
  "name": "Go to Sleep",
  "description": "Have Samuel L Jackson remind you when it's your bedtime",
  "version": "1.0",

  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Go to Sleep!",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "notifications"
  ]
}
