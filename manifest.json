{
  "manifest_version": 2,
  "name": "Go to Sleep",
  "description": "Samuel L. Jackson reminds you when it's your bedtime. Story by Adam Mansbach.",
  "version": "2.2",
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "photos/icon.png",
    "default_title": "Go to Sleep!",
    "default_popup": "popup.html"
  },

  "icons": {
    "128":"photos/icon128.jpg"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "notifications",
    "https://www.google-analytics.com/"
    ]
}
